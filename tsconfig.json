{
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["@types/jest"]
  },
  "include": ["./"],
  "files": ["./global.d.ts", "src/types/express/index.d.ts", "src/lib/router/types.d.ts"],
  "exclude": ["node_modules"]
}
